{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "outDir": "build",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "watch": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "index.android.js",
        "index.ios.js",
        "build",
        "node_modules"
    ]
}